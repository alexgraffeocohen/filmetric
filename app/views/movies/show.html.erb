<div class="row">
  <div class="col-md-8">
    <div id="item-data">
      <h1><%= @movie.title %></h1>

      <% if @average > 75 %>
        <span id="filmetric-good"><%= @movie.filmetric %></span>
      <% elsif @average.between?(50,75) %>
        <span id="filmetric-ok"><%= @movie.filmetric %></span>
      <% elsif @average < 50 %>
        <span id="filmetric-bad"><%= @movie.filmetric %></span>
      <% end %>

      <h2>Info</h2>
      <p>
        Release Year: <%= @movie.release_year %><br>
        Rating: <%= @movie.rating %><br>
        Criticsâ€™ Score: <%= @movie.critics_score %><br>
        Audience Score: <%= @movie.audience_score %><br>
        Directed By: <a href="<%= director_path(@movie.directors.first) %>">
          <%= @movie.directors.first.name %></a>
      </p>

      <h2>Genres</h2>
      <ul>
        <% @movie.genres.each do |genre| %>
          <li><a href="<%= genre_path(genre.id) %>"><%= genre.name %></a></li>
        <% end %>
      </ul>

      <h2>Actors</h2>
      <ul>
        <% @movie.actors.each do |actor| %>
          <li><a href="<%= actor_path(actor.id) %>"><%= actor.name %></a></li>
        <% end %>
      </ul>
    </div>
  </div>

  <div id="poster-container" class="col-md-4">
    <img src="<%= @movie.poster_link %>" class="img-responsive poster">
  </div>
</div>
